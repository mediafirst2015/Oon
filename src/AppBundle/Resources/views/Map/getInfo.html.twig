<input type='hidden' class='dataId' value='{{ object.id }}'>
<div class='map-title'>
    Адрес
    {{ object.adrs }}
</div>
<div style='text-align: center; margin-bottom: 5px'>
    <a href="{{ object.img }}" class="fancybox"><img src='{{ object.img }}' class='thrumb'/></a>
</div>
<table class='map-setting' style='margin: 0 auto'>
    <tr>
        <td>Стоимость</td>
        <td>{{ object.price }} р.</td>
    </tr>
    <tr>
        <td>Сторона</td>
        <td>{{ object.side }}</td>
    </tr>
    <tr>
        <td>Формат</td>
        <td>{{ object.format }}</td>
    </tr>
    {#<tr>#}
        {#<td>Тип</td>#}
        {#<td>{{ object.type }}</td>#}
    {#</tr>#}
    <tr>
        <td>Свет</td>
        <td>{{ object.light == 1 ? 'Да' : 'нет' }}</td>
    </tr>
    <tr>
        <td>GRP</td>
        <td>{{ object.grp }}</td>
    </tr>
    <tr>
        <td>OTS</td>
        <td>{{ object.ots }}</td>
    </tr>
</table>
{% if object.hot == 0 or object.hot == '0' or object.hot == null %}
