                <input type="checkbox" class="addBasket" data-id="{{ object.id }}" data-month="1" {{ myBasket[object.id~'-1-2015'] is defined ? 'checked="checked"' }}>
            </td>
            <td>&nbsp;{{ object.price }}&nbsp;р.</td>
