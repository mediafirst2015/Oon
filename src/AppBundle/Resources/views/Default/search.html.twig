                <option value="ЮАО">ЮАО</option>
                <option value="ЮЗАО">ЮЗАО</option>
                <option value="ЗАО">ЗАО</option>
                <option value="CЗАО">CЗАО</option>
                <option value="CАО">CАО</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            <h2  class="green">Период</h2>
