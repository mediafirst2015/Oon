{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div>
        <div style="padding: 20px">
            <h2 class="green">Регистрация</h2><br />
            <form method="post">
                {#{{ form_widget(form) }}#}
                <div style="width: 600px">
                    <div class="row">
                        <div class="col-sm-6 ">
                            <input type="text" placeholder="Имя*" required="required" name="firstName">
                        </div>
                        <div class="col-sm-6">
                            <input type="text" placeholder="Фамилия*" required="required" name="lastName">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-6 ">
                            <input type="text" placeholder="Телефон" name="phone" id="phone">
                        </div>
                        <div class="col-sm-6">
                            <input type="text" placeholder="Email*" required="required" name="username">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-6 ">
                            <input type="password" placeholder="Пароль*" required="required" name="password">
                        </div>
                        <div class="col-sm-6">
                            <input type="password" placeholder="Повторите пароль*" required="required" name="password2">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-12 ">
                            <input type="text" placeholder="Название организации" name="companyTitle">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-6 "></div>
                        <div class="col-sm-6 ">
                            <button type="submit" class="btn2" id="register-submit" style="float: right">Зарегистрироваться</button>
                        </div>
                    </div>
                </div>
            </form>
            <br />
            <br />
            <br />
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/jquery.inputmask/js/inputmask.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/jquery.inputmask/js/jquery.inputmask.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function(){
            $('#phone').inputmask('+7 (999) 999-99-99');
        })
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container{
            min-width: 800px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .form-group{
            width: 550px;
        }
        .form-group label{
            width: 300px;
            text-align: right;
            padding: 5px 10px 5px 5px;
            display: inline-block;
            color: #1B3266;
        }
        .form-group input{

            width: 200px;
            padding: 5px;
            outline: none;
            border-radius: 3px;
        }
        .form-group button{
            margin-top: 20px;
            margin-right: 30px;
            padding: 5px 15px;
            float: right;
        }
        .checkbox label{
            width: 500px;
        }
        .register-block{
            width: 300px;
            /*float: left;*/
        }
        input{
            width: 100%;
            height: 40px;
        }
    </style>
{% endblock %}