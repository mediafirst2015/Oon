<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" style="width: 400px">
        <div class="modal-content">
            <form id="get-media-plan-form" method="POST" action="{{ path('send_mediaplan') }}">
                <div class="form">
                    <h2 class="pink" style="display: block;text-align: center;margin-top: -5px;">Получить медиа план</h2>
                    <div class="error get-media-plan-error"></div>
                    <div class="relative">
                        <span class="required"></span>
                        <input type="text" name="name" id="name" placeholder="Имя">
                    </div>
                    <div class="relative">
                        <span class="required"></span>
                        <input type="text" name="email" id="email" placeholder="E-mail">
                    </div>
                    <div class="relative">
                        <span class="required"></span>
                        <input type="text" name="phone" id="phone" placeholder="Телефон">
                    </div>
                    <br />
                    <br />
                    <div style="text-align: right">
                        <span class="btn2" style="font-size: 16px" id="get-media-plan">
                            Получить медиа план
                        </span>
                    </div>
                    <br />
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade set-contacts" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" style="width: 400px">
        <div class="modal-content">
            <div class="form">
                <h2 class="pink" style="display: block;text-align: center;margin-top: -5px;">Связаться с нами</h2>
                <input type="Name" placeholder="Имя">
                <input type="Email" placeholder="Email">
                <input type="phone" placeholder="Телефон">
                <br />
                <br />
                <div style="text-align: right">
                    <span class="btn2" style="font-size: 16px">
                        Отправить контакты
                    </span>
                </div>
                <br />
            </div>
        </div>
    </div>
</div>


{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="flashbag-success">
        {{ flashMessage | raw }}
    </div>
{% endfor %}


<script>
    $(document).ready(function(){
       $('#get-media-plan').click(function(){
            var error = '';
           if ($('#name').val() == ''){
               error += 'Поле имя обязательно для заполнения <br />';
           }
           if ($('#email').val() == ''){
               error += 'Поле e-mail обязательно для заполнения <br />';
           }else{
               var re = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
               if (!re.test($('#email').val())){
                   error += 'Поле e-mail Заполнено некорректно <br />';
               }
           }
           if ($('#phone').val() == ''){
               error += 'Поле телефон обязательно для заполнения <br />';
           }
           if (error == ''){
               $('#get-media-plan-form').submit();
           }else{
               $('.get-media-plan-error').html(error);
           }
       });

        setTimeout(function(){$('.flashbag-success').fadeOut()},4000);
    });
</script>


