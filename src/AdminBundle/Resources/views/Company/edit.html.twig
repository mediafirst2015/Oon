{% extends "AdminBundle::layout.html.twig" %}

{% block breadcrumb %}
    <a href="{{ path('company_list') }}"><span class="btn btn-primary right-btn">В список</span></a>
    <ul class="breadcrumb well">
        <li><a href="{{ path('company_list') }}">Список компаний</a></li>
        <li>Изменение<span class="divider"></span></li>
    </ul>
{% endblock %}

{% block content %}
    {#<div class="well">#}
    {#</div>#}
    <div class="well">
        <form method="POST" enctype="multipart/form-data">
            {{ form_widget(form) }}
        </form>
    </div>
    <iframe src="{{ path('sale_list',{'companyId' : id}) }}" class="frame"></iframe>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/admin/ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('bundles/admin/ckeditor/styles.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {#<link href="{{ asset('bundles/app/ckeditor/contents.css') }}" rel="stylesheet">#}
    <style>
        .frame{
            width: 100%;
            min-height: 500px;
            border: 0;
        }
    </style>
{% endblock %}